<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F51B5"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="32dp">

        <EditText
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:layout_weight="0"
            android:background="#FFFFFF"
            android:gravity="bottom|right"
            android:inputType="textPersonName"
            android:text=""

            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="218dp"
                android:layout_height="261dp"
                android:layout_weight="0"
                android:background="#FF494949">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_7"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="72dp"
                            android:layout_height="65dp"
                            android:layout_weight="1"

                            android:background="#D3D3D3"
                            android:text="7"
                            android:textSize="30sp" />

                        <Button
                            android:id="@+id/bt_8"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="72dp"
                            android:layout_height="65dp"
                            android:layout_weight="1"

                            android:background="#D3D3D3"
                            android:text="8"
                            android:textSize="30sp" />

                        <Button
                            android:id="@+id/bt_9"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="72dp"
                            android:layout_height="65dp"
                            android:layout_weight="1"

                            android:background="#D3D3D3"
                            android:text="9"
                            android:textSize="30sp" />

                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints">

                        <Button
                            android:id="@+id/bt_4"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="72dp"
                            android:layout_height="65dp"
                            android:layout_weight="1"

                            android:background="#D3D3D3"
                            android:text="4"
                            android:textSize="30sp" />

                        <Button
                            android:id="@+id/bt_5"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="72dp"
                            android:layout_height="65dp"
                            android:layout_weight="1"

                            android:background="#D3D3D3"
                            android:text="5"
                            android:textSize="30sp" />

                        <Button
                            android:id="@+id/bt_6"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="72dp"
                            android:layout_height="65dp"
                            android:layout_weight="1"

                            android:background="#D3D3D3"
                            android:text="6"
                            android:textSize="30sp" />

                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_1"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="72dp"
                            android:layout_height="65dp"
                            android:layout_weight="1"

                            android:background="#D3D3D3"
                            android:text="1"
                            android:textSize="30sp" />

                        <Button
                            android:id="@+id/bt_2"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="72dp"
                            android:layout_height="65dp"
                            android:layout_weight="1"

                            android:background="#D3D3D3"
                            android:text="2"
                            android:textSize="30sp" />

                        <Button
                            android:id="@+id/bt_3"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="72dp"
                            android:layout_height="65dp"
                            android:layout_weight="1"

                            android:background="#D3D3D3"
                            android:text="3"
                            android:textSize="30sp" />

                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#D3D3D3"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_0"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="72dp"
                            android:layout_height="65dp"

                            android:background="#D3D3D3"
                            android:text="0"
                            android:textSize="30sp" />

                        <Button
                            android:id="@+id/bt_point"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="72dp"
                            android:layout_height="65dp"

                            android:background="#D3D3D3"
                            android:text="."
                            android:textSize="30sp" />

                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="200dp"
                android:layout_height="265dp"
                android:layout_weight="0">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_div"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"

                            android:background="#D3D3D3"
                            android:text="/"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#3F51B5"
                            android:textSize="30sp" />

                        <Button
                            android:id="@+id/bt_cancel"
                            style="@android:style/Widget.DeviceDefault.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="#D3D3D3"
                            android:text="cancel"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            tools:textSize="15sp" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FDB6B6B6"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_mult"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="100dp"
                            android:layout_height="65dp"

                            android:background="#D3D3D3"
                            android:text="*"
                            android:textColor="#3F51B5"
                            android:textSize="30sp" />

                        <Button
                            android:id="@+id/bt_AC"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="#D3D3D3"
                            android:text="AC"
                            android:textColor="#3F51B5"
                            tools:textSize="20sp" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D3D3D3"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_minus"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="100dp"
                            android:layout_height="65dp"

                            android:background="#D3D3D3"
                            android:text="-"
                            android:textColor="#3F51B5"
                            android:textSize="30sp" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_plus"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="100dp"
                            android:layout_height="65dp"

                            android:background="#D3D3D3"
                            android:text="+"
                            android:textColor="#3F51B5"
                            android:textSize="30sp" />

                        <Button
                            android:id="@+id/bt_eq"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="72dp"
                            android:layout_height="65dp"
                            android:layout_weight="1"

                            android:background="#D3D3D3"
                            android:text="="
                            android:textSize="30sp" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="280dp"
                android:layout_height="265dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="0"
                android:backgroundTint="#FF4D4D4D">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="65dp"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_sin"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="sin"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                            tools:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_cos"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="cos"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                            tools:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_sqr"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"

                            android:background="#3F51B5"
                            android:text="square"
                            android:textColor="#FFFFFF"
                            tools:textSize="20sp" />

                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:id="@+id/linearLayout0"
                        android:layout_width="300dp"
                        android:layout_height="65dp"
                        android:backgroundTint="#FFFFFF"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_tg"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="tg"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                            tools:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_ctg"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="ctg"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                            tools:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_sqrt"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"

                            android:background="#3F51B5"
                            android:text="sqrt"
                            android:textColor="#FFFFFF"
                            tools:textSize="20sp" />

                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="65dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/percent"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"

                            android:background="#3F51B5"
                            android:text="%"
                            android:textColor="#FFFFFF"
                            tools:textSize="20sp" />

                        <Button
                            android:id="@+id/bt_fac"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="!"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                            tools:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_squareNM"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="sqrNM"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                            tools:textSize="18sp" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="65dp"
                        android:background="#3F51B5"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_ln"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="ln"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                            tools:textSize="18sp" />

                        <Button
                            android:id="@+id/bt_log"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="log"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                            tools:textSize="18sp" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>

